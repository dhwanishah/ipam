<%= erb :'template/header' %>
  <title>IPAM - Manage Users</title>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <%= erb :'template/menu' %>
        <h3 class="text-muted"><a href="/"><img alt="IPAM" src="/logo.png" style="width:75px;height:50px;"/></a></h3>
      </div>
      <div class="well" style="padding-bottom:-10px;">
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Username</th>
              <th>Auth Level</th>
              <th style="width: 50px;"></th>
            </tr>
          </thead>
          <tbody>
	  <%
            @username.each do |u| %>

            <tr style="color:#428bca;">
              <td><%= @ctr %></td>
              <td><b><%= u %></b></td>
              <td><span style="text-transform:uppercase;"><%= @@redis.hget(u, "type") %></span></td>
              <td>
                <a href="/admin/manageUsers/edit/<%= u %>"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="/admin/manageUsers/del/<%= u %>"><span class="glyphicon glyphicon-remove"></span></a>
              </td>
            </tr>

	    <% @ctr = @ctr + 1
	    end %>

          </tbody>
        </table>
      </div>
    </div>
<%= erb :'template/footer' %>
