<%= erb :'template/header' %>
  <title>IPAM - Login</title>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <%= erb :'template/menu' %>
        <h3 class="text-muted"><a href="/"><img alt="IPAM" src="/logo.png" style="width:75px;height:50px;"/></a></h3>
      </div>
      <div>
        <form role="form" action="/login" method="post" >
          <div class="form-group">
            <label for="Username">Username</label>
            <input type="text" class="form-control" id="" name="username" placeholder="Username" style="width:200px">
          </div>
          <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password" style="width:200px">
          </div>
          <button class="btn btn-large btn-primary" type="submit">Login</button>
          <a href="/register" style="text-decoration:none;color:blue;">Register</a>
        </form> 
      </div>
    </div>
<%= erb :'template/footer' %>
