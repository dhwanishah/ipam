<%= erb :'template/header' %>
  <title>IPAM - Manage Users</title>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <%= erb :'template/menu' %>
        <h3 class="text-muted"><a href="/"><img alt="IPAM" src="/logo.png" style="width:75px;height:50px;"/></a></h3>
      </div>
      <b>Edit user profile of:<i style="margin-left:10px;font-size:18px;color:#ff0000;"><%= @username %></i></b><br>
      <br>
      <form role="form" action="/admin/manageUsers/edit/<%= @username %>" method="post" >
    	<div class="panel panel-info" style="border:0;">
          <div class="panel-heading">Password</div>
          <div class="panel-body">
            <input type="password" class="form-control" name="password_edit" id="password_edit" placeholder="Password" style="width:200px;margin-bottom:10px;margin-top:10px;">
            <input type="password" class="form-control" name="passwordConfirm_edit" id="passwordConfirm_edit" placeholder="Confirm Password" style="width:200px;">
	  </div>
        </div>
        <button class="btn btn-large btn-primary" type="submit">Submit Changes</button>
      </form>
    </div>
<%= erb :'template/footer' %>
